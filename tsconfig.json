{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "CommonJS",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "./src/index.d.ts"
    ]
  },
  "include": [
    "./src/**/*.ts",
  ]
}